    춸 2025 Elite Escort Chile. Esta plataforma no ofrece servicios directamente, solo exhibe informaci칩n p칰blica. Si encuentras contenido inapropiado, por favor cont치ctanos.
  </footer>

  <!-- Script -->
  <script>
    const CSV_URL = "https://docs.google.com/spreadsheets/d/e/2PACX-1vQzg76n4MmvSn9EyX01nG4CRVzMXC7g1-3AohooupKTIhFThrntKSFuiIwk8RqMd0LNPERzeaRQb5-m/pub?gid=0&single=true&output=csv";
    const IMAGES_FOLDER = "imagenes/";
    let productos = [];

    async function cargarProductos() {
      const res = await fetch(CSV_URL);
      const data = await res.text();
      const filas = data.trim().split("\n").map(f => f.split(","));
      const headers = filas.shift().map(h => h.trim());
      productos = filas.map(f => {
        const obj = {};
        headers.forEach((h, i) => obj[h] = f[i]?.trim());
        return obj;
      }).filter(p => p.Visible?.toLowerCase() === "si");
      mostrarProductos();
    }

    function mostrarProductos(lista = productos) {
      const contenedor = document.getElementById("productGallery");
      contenedor.innerHTML = "";
      lista.forEach(prod => {
        const div = document.createElement("div");
        div.className = "product-card";
        const imgSrc = IMAGES_FOLDER + (prod.ImagenPreview || "placeholder.jpg");
        div.innerHTML = `
          <img src="${imgSrc}" alt="${prod["Alt Imagen"] || prod.Nombre}">
          <div class="actions">
            <a href="${prod.LinkProducto}" class="ver-mas">Ver m치s</a>
            <a href="https://wa.me/56${prod.WhatsApp}?text=${encodeURIComponent(`Hola ${prod.Nombre}, te vi en EliteEscort.cl y me gustar칤a saber tus servicios y valores. Gracias`)}" target="_blank" class="whatsapp">WhatsApp</a>
          </div>
          <div class="product-info">
            <h3>${prod.Nombre}</h3>
            <p>${prod.Sexo}, ${prod.Edad}</p>
            <p>${prod.Ciudad}</p>
          </div>
        `;
        contenedor.appendChild(div);
      });
    }

    function filtrarPorTag() {
      const tagInput = document.getElementById("tagInput").value.toLowerCase();
      const productosFiltrados = productos.filter(prod => {
        if (prod.Tags) {
          const tagsProducto = prod.Tags.toLowerCase().split(';').map(tag => tag.trim());
          return tagsProducto.some(tag => tag.includes(tagInput));
        }
        return false;
      });
      mostrarProductos(productosFiltrados);
    }

    document.addEventListener("contextmenu", function(e) {
      e.preventDefault();
    });

    cargarProductos();
  </script>

