  <!-- Script -->
  <script>
    const JSON_URL = "http://localhost:8000/base.json";

    async function cargarProductos() {
      try {
        const res = await fetch(JSON_URL);
        const data = await res.json();
        const productos = data.filter(p => p.Visible?.toLowerCase() === "si");
        mostrarProductos(productos);
      } catch (error) {
        console.error("Error cargando productos:", error);
      }
    }

    function mostrarProductos(lista) {
      const contenedor = document.getElementById("productGallery");
      contenedor.innerHTML = "";
      lista.forEach(prod => {
        const div = document.createElement("div");
        div.className = "product-card";
        const imgSrc = "imagenes/" + (prod.ImagenPreview || "placeholder.jpg");
        div.innerHTML = `
          <img src="${imgSrc}" alt="${prod["Alt Imagen"] || prod.Nombre}">
          <div class="actions">
            <a href="${prod.LinkProducto}" class="ver-mas">Ver mÃ¡s</a>
            <a href="https://wa.me/56${prod.WhatsApp}?text=${encodeURIComponent(`Hola ${prod.Nombre}, te vi en EliteEscort.cl y me gustarÃ­a saber tus servicios y valores. Gracias`)}" target="_blank" class="whatsapp">WhatsApp</a>
          </div>
          <div class="product-info">
            <h3>${prod.Nombre}</h3>
            <p>${prod.Sexo}, ${prod.Edad}</p>
            <p>${prod.Ciudad}</p>
          </div>
        `;
        contenedor.appendChild(div);
      });
    }

    document.addEventListener("DOMContentLoaded", cargarProductos);
  </script>

