  <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
  <script>
    // Lightbox configuration
    lightbox.option({
      'resizeDuration': 200,
      'wrapAround': true,
      'albumLabel': "Imagen %1 de %2"
    });

    // Mostrar loader mientras se cargan imágenes
    document.addEventListener('DOMContentLoaded', function() {
      const loader = document.getElementById('loader');
      const images = document.querySelectorAll('img[loading="lazy"], video');
      
      let imagesToLoad = images.length;
      
      if (imagesToLoad === 0) {
        loader.style.display = 'none';
      } else {
        loader.style.display = 'block';
      }

      function imageLoaded() {
        imagesToLoad--;
        if (imagesToLoad === 0) {
          loader.style.display = 'none';
        }
      }

      images.forEach(img => {
        if (img.complete) {
          imageLoaded();
        } else {
          img.addEventListener('load', imageLoaded);
          img.addEventListener('error', imageLoaded); // En caso de error
        }
      });

      // Deshabilitar atajos
      function disableKeys(e) {
        if ((e.ctrlKey && ['u', 's', 'c'].includes(e.key.toLowerCase())) || e.key === 'F12') {
          e.preventDefault();
          return false;
        }
      }

      // Smooth scroll para navegación
      document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function(e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth'
            });
          }
        });
      });
    });
  </script>
